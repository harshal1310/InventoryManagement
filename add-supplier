    <!-- Modal for Editing Supplier -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div class="modal-header">
                <h2>Edit Supplier Information</h2>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editRowIndex">
                <input type="text" id="editSupplierName" placeholder="Supplier Name" required>
                <input type="text" id="editContactPerson" placeholder="Contact Person" required>
                <input type="text" id="editPhoneNumber" placeholder="Phone Number" required>
                <input type="text" id="editEmail" placeholder="Email Address" required>
                <input type="text" id="editAddress" placeholder="Address" required>
            </div>
            <div class="modal-footer">
                <button id="saveChangesBtn">Save Changes</button>
            </div>
        </div>
    </div>

    <!-- JavaScript Code -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('supplierForm');
            const tableBody = document.querySelector('#supplierTable tbody');
            const editModal = document.getElementById('editModal');
            const editSupplierNameInput = document.getElementById('editSupplierName');
            const editContactPersonInput = document.getElementById('editContactPerson');
            const editPhoneNumberInput = document.getElementById('editPhoneNumber');
            const editEmailInput = document.getElementById('editEmail');
            const editAddressInput = document.getElementById('editAddress');
            const saveChangesBtn = document.getElementById('saveChangesBtn');

            // Handle form submission for adding a new supplier
            form.addEventListener('submit', function(event) {
                event.preventDefault();

                const supplierName = document.getElementById('supplierName').value;
                const contactPerson = document.getElementById('contactPerson').value;
                const phoneNumber = document.getElementById('phoneNumber').value;
                const email = document.getElementById('email').value;
                const address = document.getElementById('address').value;

                if (supplierName.trim() === '' || contactPerson.trim() === '' || phoneNumber.trim() === '' || email.trim() === '' || address.trim() === '') {
                    alert('Please fill in all fields.');
                    return;
                }

                // Create new row for the table
                const newRow = document.createElement('tr');
                newRow.innerHTML = `
                    <td>${supplierName}</td>
                    <td>${contactPerson}</td>
                    <td>${phoneNumber}</td>
                    <td>${email}</td>
                    <td>${address}</td>
                    <td>
                        <button class="editBtn">Edit</button>
                        <button class="deleteBtn">Delete</button>
                    </td>
                `;

                // Add edit functionality
                const editBtn = newRow.querySelector('.editBtn');
                editBtn.addEventListener('click', function() {
                    editSupplierNameInput.value = supplierName;
                    editContactPersonInput.value = contactPerson;
                    editPhoneNumberInput.value = phoneNumber;
                    editEmailInput.value = email;
                    editAddressInput.value = address;
                    editModal.style.display = 'block';

                    // Save changes on modal save button click
                    saveChangesBtn.onclick = function() {
                        newRow.querySelector('td:nth-child(1)').textContent = editSupplierNameInput.value;
                        newRow.querySelector('td:nth-child(2)').textContent = editContactPersonInput.value;
                        newRow.querySelector('td:nth-child(3)').textContent = editPhoneNumberInput.value;
                        newRow.querySelector('td:nth-child(4)').textContent = editEmailInput.value;
                        newRow.querySelector('td:nth-child(5)').textContent = editAddressInput.value;
                        editModal.style.display = 'none';
                    };

                    // Store the current row index for saving changes
                    document.getElementById('editRowIndex').value = newRow.rowIndex;
                });

                // Add delete functionality
                const deleteBtn = newRow.querySelector('.deleteBtn');
                deleteBtn.addEventListener('click', function() {
                    newRow.remove();
                });

                // Append the new row to the table
                tableBody.appendChild(newRow);

                // Clear the form fields
                form.reset();
            });

            // Close the modal when clicking outside of it
            window.onclick = function(event) {
                if (event.target === editModal) {
                    editModal.style.display = 'none';
                }
            };

            // Close the modal when clicking the close button
            document.querySelector('.close').onclick = function() {
                editModal.style.display = 'none';
            };
        });
    </script>
</body>
